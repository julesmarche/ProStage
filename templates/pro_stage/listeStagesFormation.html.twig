{% extends 'base.html.twig' %}

{% block nomDeLaPage %}

<h1> Formation : {{formation.nomLong}} </h1>

  {% endblock %}
 
{% block tableauDeLaPage %}
<thead>
  <tr>
  <th scope="col">Numéro</th>
  <th scope="col">Intitulé</th>
  <th scope="col">Entreprise</th>
  <th scope="col">Contact</th>
  <th scope="col">Description Complète</th>
  </tr>
</thead>

<tbody>
  {% for stage in formation.stages %}
  <tr>
      <th scope="row"> {{stage.id }} </th>
      <td> {{ stage.titre }}</td>
      <td> {{ stage.entreprise.nom }}</td>
      <td> {{ stage.emailContact }}</td>
      <td><a href="{{path('pro_stage_stages',{idStage:stage.id })}}"> En savoir plus <i class="icon-left-hand-1"></i></a></td>
  </tr>
  {% endfor %}
</tbody>

{% endblock %}