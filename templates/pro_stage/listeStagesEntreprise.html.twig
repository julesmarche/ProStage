{% extends 'base.html.twig' %}

{% block contenu %}
  <style>
  td {
  border-color: #158cba;
  }
  th {
  border-color: #158cba;
  }
  </style>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Numéro</th>
        <th scope="col">Intitulé</th>
        <th scope="col">Contact</th>
        <th scope="col">Description Complète</th>
      </tr>
    </thead>

  <tbody>
    {% for stage in stagesEntreprise %}
      <tr>
        <th scope="row"> {{stage.id }} </th>
        <td> {{ stage.titre }}</td>
        <td> {{ stage.emailContact }}</td>
        <td><a href="{{path('pro_stage_stages',{idStage:stage.id })}}"> En savoir plus <i class="icon-left-hand"></i></a></td>
      </tr>
    {% endfor %}
  </tbody>
{% endblock %}