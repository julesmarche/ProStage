{% extends 'base.html.twig' %}

{% block nomDeLaPage %}
  <h1> Entreprise : <u>{{nom}}</u> </h1>
{% endblock %}

{% block tableauDeLaPage %}
  <thead>
    <tr>
      <th scope="col">Numéro</th>
      <th scope="col">Intitulé</th>
      <th scope="col">Contact</th>
      <th scope="col">Description Complète</th>
    </tr>
  </thead>

  <tbody>
    {% for stage in stagesEntreprise %}
      <tr>
        <th scope="row"> {{stage.id }} </th>
        <td> {{ stage.titre }}</td>
        <td> {{ stage.emailContact }}</td>
        <td><a href="{{path('pro_stage_stages',{id:stage.id })}}"> En savoir plus <i class="icon-left-hand"></i></a></td>
      </tr>
    {% endfor %}
  </tbody>
  
{% endblock %}