{% extends 'base.html.twig' %}

{% block contenu %}

 {{ form_start(formulaireInscription,{ 'attr':{ 'novalidate': 'novalidate' }}) }}


<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h3 class="text-center">
					Formulaire d'inscription !
			</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
                    {{ form_label( formulaireInscription.prenom) }}
                    {{ form_errors( formulaireInscription.prenom) }}
                    {{ form_widget( formulaireInscription.prenom) }}
			</div>
			<div class="row">
                    {{ form_label( formulaireInscription.nom) }}
                    {{ form_errors( formulaireInscription.nom) }}
                    {{ form_widget( formulaireInscription.nom) }}
			</div>
			<div class="row">
                    {{ form_label( formulaireInscription.email) }}
                    {{ form_errors( formulaireInscription.email) }}
                    {{ form_widget( formulaireInscription.email) }}
			</div>
			<div class="row">
                    {{ form_label( formulaireInscription.password) }}
                    {{ form_errors( formulaireInscription.password) }}
                    {{ form_widget( formulaireInscription.password) }}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
            <button type="submit" class="btn btn-dark">Inscription !</button>
		</div>
	</div>
</div>

{{ form_end(formulaireInscription) }}

{% endblock %}
