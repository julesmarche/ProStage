{% extends 'base.html.twig' %}

{% block contenu %}

 {{ form_start(formulaireInscription,{ 'attr':{ 'novalidate': 'novalidate' }}) }}


<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<h3 class="text-center">
					Formulaire d'inscription !
			</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
                    {{ form_row( formulaireInscription.prenom) }}
                    
			</div>
			<div class="row">
                    {{ form_row( formulaireInscription.nom) }}
			</div>
			<div class="row">
                    {{ form_row( formulaireInscription.email) }}
			</div>
			<div class="row">
                    {{ form_row( formulaireInscription.password) }}
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
            <button class="btn btn-outline-primary" type="submit" >
				Inscription !
			</button>
		</div>
	</div>
</div>

{{ form_end(formulaireInscription) }}

{% endblock %}
